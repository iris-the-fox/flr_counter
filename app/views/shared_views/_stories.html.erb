<table>
  <thead>
    <tr>
      <th>№</th>
      <th>Название</th>
      <th>Ссылка</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% i=0 %>
    <% @stories.each do |story| %>
      <% i+=1 %>
      <tr>
        <td><%= "#{i}." %></td>
        <td><%= story.name %></td>
        <td><%= story.link %></td>
        <td><%= link_to 'Show', [story.group, story] %></td>
        <td><%= link_to 'Edit', edit_group_story_path(story.group, story) %></td>
        <td><%= link_to 'Destroy', [story.group, story], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
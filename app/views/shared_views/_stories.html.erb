<table>
  <thead>
    <tr>
      <th>№</th>
      <th>Название</th>
      <th>Ссылка</th>
      <th class="counter">Всего отзывов</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% i=0 %>
    <% @stories.each do |story| %>
      <% i+=1 %>
      <tr>
        <td><%= "#{i}." %></td>
        <td><%= story.name %></td>
        <td><%= story.link %></td>
        <td class="counter"><%= story.reviews.count %></td>        
        <td><%= link_to 'Посмотреть', [story] %></td>
        <td><%= link_to 'Редактировать', edit_story_path(story) %></td>
        <td><%= link_to 'Удалить', [story], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
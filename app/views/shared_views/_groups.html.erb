<table>
  <thead>
    <tr>
      <th>ФЛР</th>
      <th>Номер</th>
      <th>Название</th>
      <th>Цвет</th>
      <th>Куратор</th>
      <th>Рассказов в группе:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.flr.number %></td>        
        <td><%= group.number %></td>
        <td><%= group.name %></td>
        <td><%= group.color %></td>
        <td><%= group.user.email %></td>
        <td><%= group.stories.count %></td>
        <td><%= link_to 'Посмотреть', group %></td>
        <td><%= link_to 'Редактировать', edit_group_path(group) %></td>
        <td><%= link_to 'Удалить', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


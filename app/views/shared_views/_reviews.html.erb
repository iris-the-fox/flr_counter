<table>
  <thead>
    <tr>
      <th>№</th>
      <th>Текст</th>
      <th>Ссылка</th>
      <th>Автор</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% i=0 %>


    <% @reviews.each do |review| %>
      <% i+=1 %>
      <tr>
        <td><%= "#{i}." %></td>
        <td><%= review.text %></td>
        <td><%= review.link %></td>
        <td><%= review.author %></td>
        <td><%= link_to 'Посмотреть', [review] %></td>
        <td><%= link_to 'Редактировать', edit_review_path(review) %></td>
        <td><%= link_to 'Удалить', [review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
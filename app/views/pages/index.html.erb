<p id="notice"><%= notice %></p>

<h1>ФЛР № <%= @flr.number %></h1>
<p>Первая страница: <%= @flr.first_page %></p>
<p>Последняя страница: <%= @flr.last_page %></p>
<p>Страниц в базе: <%= @flr.pages.count %></p>
<%= link_to("Ссылка на форум", @flr.link, target: "_blank") %> 
<br>
<%= button_to 'Получить все страницы',  {action: "all_pages"} %>
<br>
<table>
  <thead>
    <tr>
      <th>№</th>
      <th>Body</th>
      <th>Ссылка</th>
      <th>Сообщений на странице</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.number %></td>
        <td><%= page.body[700..900] %></td>
        <td><%= link_to("Ссылка на страницу № #{page.number}", page.link, target: "_blank") %></td>
        <td><%= page.messages.count %></td>
        <td><%= link_to 'Show', page_messages_path(page) %></td>
        <td><%= button_to 'Разобрать на сообщения', all_messages_page_messages_path(page), method: :post %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


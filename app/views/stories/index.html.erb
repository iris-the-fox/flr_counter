<p id="notice"><%= notice %></p>

<h1>Stories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.name %></td>
        <td><%= story.link %></td>
        <td><%= story.group.name %></td>
        <td><%= link_to 'Show', [story.group, story] %></td>
        <td><%= link_to 'Edit', edit_group_story_path(story.group, story) %></td>
        <td><%= link_to 'Destroy', [story.group, story], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_group_story_path %>

<%= form_for([@group, @story]) do |form| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('common.errors') %></h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :general, class: 'check_box' %>
    <%= form.check_box :general, class: 'check_box' %>
  </div>
   <div class="actions">
    <%= form.submit "Сохранить изменения", id: 'submit-story' %>
  </div>

  <div class='links'>
    <%= link_to_add_association '+ Добавить отзыв', form, :reviews, data: {"association-insertion-method" => :after}, class: "button-like add-review" %>
  </div>

  <%= form.fields_for :reviews do |review| %>
    <%= render 'review_fields', :f => review %>
  <% end %>



<% end %>

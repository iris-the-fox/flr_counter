<%= form_for([@group,@story]) do |form| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>
   <div class="actions">
    <%= form.submit "Сохранить изменения", id: 'submit-story' %>
  </div>

  <div class='links'>
    <%= link_to_add_association 'Добавить отзыв', form, :reviews, data: {"association-insertion-method" => :after} %>
  </div>

  <%= form.fields_for :reviews do |review| %>
    <%= render 'review_fields', :f => review %>
  <% end %>



<% end %>
